---
import Layout from '../layouts/Layout.astro';
import Debug from 'astro/debug';
import dotenv from 'dotenv'
dotenv.config()

let title = 'Products';

const query = `
{
	products(first:10) {
		edges {
			node {
				id
				handle
        title
			}
		}
	}
}`

const response = await fetch('https://slacklinemtl.myshopify.com/admin/api/graphql.json', {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
    'X-Shopify-Access-Token': process.env.SHOPIFY_ADMIN_PASSWORD
  },
  body: JSON.stringify({query}),
})
const shopiData = await response.json();
---
<Layout title={title}>
  <Debug {shopiData}></Debug>
  {JSON.stringify(shopiData)}
  <h1 class="bg-red-500 font-bold mt-6">{title}</h1>

  {shopiData.data.products.edges.map(({node})=>(
    <p class="text-green-300">{node.title}</p>
  ))}
</Layout >